rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'admin@velocity.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Vehicles collection - anyone can read, only admins can write
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Testimonials collection - anyone can read approved ones
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Rentals collection
    match /rentals/{rentalId} {
      // Allow anyone to read rentals (needed for checking vehicle availability on home screen)
      allow read: if true;
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Contacts collection
    match /contacts/{contactId} {
      // Anyone can create contact messages (for contact form)
      allow create: if true;
      // Only admins can read and delete contact messages
      allow read, delete: if isAdmin();
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null &&
        (userId == request.auth.uid || isAdmin());
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
